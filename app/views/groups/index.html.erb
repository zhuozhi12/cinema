<div class="col-md-12">
  <div class="group">
    <%= link_to("新增評論", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>電影名</td>
        <td>電影評論</td>
        <td>評論人 </td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td> <%= group.user.email %> </td>
          <td>
          <% if current_user && current_user == group.user %>
             
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
